# Example environment variables
# Copy this file to .env and fill with your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Exchange API Keys (Read-only recommended)
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret

BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=your_gcp_project_id

# Application Settings
LOG_LEVEL=INFO
CHECK_INTERVAL=3600
TESTNET=false

# Authentication Settings
# Admin username for accessing admin-only features (e.g., Sync from Sheets)
ADMIN_USERNAME=admin

# Proxy Configuration (optional, but required for restricted regions)
# Format: http://user:pass@ip:port or http://ip:port
# Example: http://username:password@proxy.example.com:8080
PROXY_URL=
