def register_user(username: str, password: str, password_confirm: str) -> str:
    """–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –Ω–æ–≤–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è"""
    try:
        if not username or not password:
            return "‚ùå Username and password are required"

        if password != password_confirm:
            return "‚ùå Passwords do not match"

        success, message = asyncio.run(auth_service.register_user(username, password))

        if success:
            return f"‚úÖ {message}\n\nYou can now login!"
        else:
            return f"‚ùå {message}"

    except Exception as e:
        logger.error(f"‚ùå Registration error: {e}")
        return f"‚ùå Registration error: {e}"


def login_user(username: str, password: str, request: gr.Request) -> Tuple[str, str, bool]:
    """
    –õ–æ–≥–∏–Ω –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è

    Returns:
        (status_message, username_for_state, is_authenticated)
    """
    try:
        if not username or not password:
            return "‚ùå Username and password are required", "", False

        success, jwt_token, message = asyncio.run(auth_service.login(username, password))

        if success:
            # –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ç–æ–∫–µ–Ω –≤ cookie —á–µ—Ä–µ–∑ JavaScript
            # –í Gradio 4.0+ –Ω—É–∂–Ω–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å gr.State –∏ custom JS
            logger.info(f"‚úÖ User logged in: {username}")
            return f"‚úÖ {message}\n\nWelcome, {username}!", username, True
        else:
            return f"‚ùå {message}", "", False

    except Exception as e:
        logger.error(f"‚ùå Login error: {e}")
        return f"‚ùå Login error: {e}", "", False


